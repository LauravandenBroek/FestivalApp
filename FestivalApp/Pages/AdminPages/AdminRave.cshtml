@page
@model FestivalApp.Pages.AdminPages.AdminRaveModel
@{
    ViewData["Title"] = "Rave Overview";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">Rave Overview</h2>
        <a asp-page="./AddRave" class="btn btn-success">Add New Rave</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Date</th>
                    <th>Minimum Age</th>
                    <th>Ticket Link</th>
                    <th>Description</th>
                    <th>Time</th>
                    <th>Image</th>
                    <th>Actions</th>
                    <th>Line-up</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rave in Model.Raves)
                {
                    <tr>
                        <td>@rave.Id</td>
                        <td>@rave.Name</td>
                        <td>@rave.Location</td>
                        <td>@rave.Date.ToString("dd MMM yyyy")</td>
                        <td>@rave.Minimum_age</td>
                        <td style="white-space: normal; word-break: break-word;">@rave.Ticket_link</td>
                        <td>@rave.Description</td>
                        <td>@rave.Time</td>
                        <td>@rave.Image</td>

                        <td>
                            <div class="d-flex gap-2 flex-wrap">
                                <a asp-page="./EditRave" asp-route-id="@rave.Id" class="btn btn-outline-primary btn-sm">Edit</a>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@rave.Id" onsubmit="return confirm('Are you sure you want to delete this rave?');">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </td>
                        <td>
                            <a asp-page="./AdminLineUp" asp-route-id="@rave.Id" class="btn btn-outline-secondary btn-sm">Line-up</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
