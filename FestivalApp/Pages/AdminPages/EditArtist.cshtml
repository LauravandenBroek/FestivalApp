@page "{id:int}"
@model EditArtistModel
<h2>Edit Artist</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Input.Id" />

    <label>Name:</label>
    <input asp-for="Input.Name" class="form-control" />
    <p>
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </p>

    <label>Nationality:</label>
    <input asp-for="Input.Nationality" class="form-control" />
    <p>
        <span asp-validation-for="Input.Nationality" class="text-danger"></span>
    </p>

    <label>Genre:</label>
    <input asp-for="Input.Genre" class="form-control" />
    <p>
        <span asp-validation-for="Input.Genre" class="text-danger"></span>
    </p>
    <label>Description:</label>
    <textarea asp-for="Input.Description" class="form-control"></textarea>
    <p>
        <span asp-validation-for="Input.Description" class="text-danger"></span>
    </p>


    @if (Model.Input.Image != null)
    {
        var base64 = Convert.ToBase64String(Model.Input.Image);
        var imgSrc = $"data:image/jpeg;base64,{base64}";
        <img src="@imgSrc" alt="Current image" style="max-height: 200px; margin-bottom: 10px;" />
    }
    else
    {
        <p><em>No image uploaded yet</em></p>
    }

    <label>Upload New Image:</label>
    <input type="file" name="uploadedImage" class="form-control" />

    <button type="submit">Save</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

